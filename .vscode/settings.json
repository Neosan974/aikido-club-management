{
  "[typescript]": {
    "editor.defaultFormatter": "denoland.vscode-deno"
  },
  "cSpell.language": "en,fr",
  "cSpell.languageSettings": [
    {
      "caseSensitive": false,
      "languageId": ["en", "fr"]
    }
  ],
  "cSpell.words": [
    "camelcase",
    "clickoutside",
    "Codacy",
    "ecma",
    "fontawesome",
    "fortawesome",
    "pinia",
    "Popconfirm",
    "rushstack",
    "tsbuildinfo",
    "Vetur",
    "vueuse"
  ],
  "deno.enablePaths": ["supabase/functions"],
  "deno.lint": true,
  "deno.unstable": true,
  "editor.rulers": [80, 120]
}
