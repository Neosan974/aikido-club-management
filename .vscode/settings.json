{
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "cSpell.language": "en,fr",
  "cSpell.languageSettings": [
    {
      "caseSensitive": false,
      "languageId": []
    }
  ],
  "cSpell.words": [
    "camelcase",
    "clickoutside",
    "Codacy",
    "ecma",
    "fkey",
    "fontawesome",
    "fortawesome",
    "pinia",
    "pkey",
    "Popconfirm",
    "rushstack",
    "SUPABASE",
    "tsbuildinfo",
    "Vetur",
    "vueuse"
  ],
  "deno.enablePaths": ["supabase/functions"],
  "deno.lint": true,
  "deno.unstable": true,
  "editor.rulers": [80, 120]
}
